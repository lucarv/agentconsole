extends layout

block content
  .panel.panel-default
    .panel-heading Device Reported Properties
    .panel-body
        table.table.table-hover
            thead
                tr
                th Property Name
                th Value
            tbody
                tr
                td Last Reboot
                td #{lastRebootTime}
                tr
                td Location
                td #{location}
                tr
                td Connected via
                td #{connType}
                tr
                td FW version
                td #{version}
                tr
                td Reporting Interval
                td #{interval}
        form(action='/twin', method='post', id='twin')
            button.btn.btn-primary(name="action", type='submit', form='twin', value='refresh') refresh


